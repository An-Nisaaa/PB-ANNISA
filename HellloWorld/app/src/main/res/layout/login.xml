<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_nama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E4DEBF">

    <TextView
        android:id="@+id/tv_judul"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="8pt"
        android:fontFamily="serif"
        android:text="SILAHKAN LOGIN TERLEBIH DAHULU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/tv_subjudul1"
        android:textStyle="bold"
        android:textSize="8pt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="serif"
        android:text="Nama pengguna :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/edit_1"
        android:text="Masukkan nama pengguna"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif"
        android:textSize="6pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <TextView
        android:id="@+id/tv_subjudul2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Kata sandi :"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="8pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/edit_2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="6pt"
        android:text="Masukkan kata sandi"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <CheckBox
        android:id="@+id/cb_ingat"
        android:layout_marginLeft="20dp"
        android:text="Ingat saya"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </CheckBox>

    <Button
        android:id="@+id/btn_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:backgroundTint="#1873DC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>

    <EditText
        android:id="@+id/tv_sub1"
        android:text="Lupa kata sandi Anda?"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="7pt"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya akun? "
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="7pt">
        </TextView>

        <EditText
            android:id="@+id/et_daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar sekarang."
            android:textSize="7pt"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="@android:color/holo_blue_dark">
        </EditText>

    </LinearLayout>


</LinearLayout>